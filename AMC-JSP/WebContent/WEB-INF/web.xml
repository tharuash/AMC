<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AMC-JSP</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.amc.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>ManagerServlet</servlet-name>
  	<servlet-class>com.amc.servlet.ManagerServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>StaffServlet</servlet-name>
  	<servlet-class>com.amc.servlet.StaffServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>DoctorServlet</servlet-name>
  	<servlet-class>com.amc.servlet.DoctorServlet</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>CustomerServlet</servlet-name>
  	<servlet-class>com.amc.servlet.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ManagerServlet</servlet-name>
  	<url-pattern>/ManagerServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>StaffServlet</servlet-name>
  	<url-pattern>/StaffServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>DoctorServlet</servlet-name>
  	<url-pattern>/DoctorServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>CustomerServlet</servlet-name>
  	<url-pattern>/CustomerServlet</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<location>/error.jsp</location>
  </error-page>
</web-app>